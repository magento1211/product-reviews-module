		</resources>
	</route>

        <route method="GET" url="/V1/reviews/gallery/:galleryId">
        <service class="Lof\ProductReviews\Api\GalleryRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="Magento_Review::reviews_all"/>
        </resources>
    </route>

