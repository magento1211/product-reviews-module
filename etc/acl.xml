<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::lof_reviews" title="Lof Reviews">
                    <resource id="Lof_ProductReviews::lof_product_reviews" title="Lof Product Reviews" sortOrder="10" />
                    <resource id="Lof_ProductReviews::lof_product_reviews_reminders" title="Lof Product Reviews - Reminders" sortOrder="20" />
                    <resource id="Lof_ProductReviews::send_reminder" title="Lof Product Reviews - Send Reminder" sortOrder="25" />
                    <resource id="Lof_ProductReviews::lof_product_gallery" title="Lof Product Reviews - Gallery" sortOrder="30" />
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Lof_ProductReviews::lof_product_reviews_config" title="Lof ProductReviews" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
